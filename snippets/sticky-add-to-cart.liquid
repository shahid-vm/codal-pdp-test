<div class="product-top-bar">
  <!-- Breadcrumb -->
  <div class="breadcrumb">
    {% render 'breadcrumb' %}
  </div>

  <!-- Price and Add to Cart -->
  <div class="product-action">
    <span class="product-price">$368.07</span>
    <button class="add-to-cart-btn" id="addToCartBtn">Add to Cart</button>
  </div>
</div>
<style>
     
  .product-top-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #e8e8e8; 
    padding: 8px 15px;
    border-bottom: 1px solid #d1d1d1;
    font-family: Arial, Helvetica, sans-serif;
    width: 100%;
    box-sizing: border-box;
  }

  
  .product-top-bar .breadcrumb {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 13px;
    color: #555;
    flex-wrap: wrap;
  }

  .product-top-bar .breadcrumb a {
    text-decoration: none;
    color: #555;
    transition: color 0.3s ease;
    font-size:14px;
  }

  .product-top-bar .breadcrumb a:hover {
    color: #000;
  }

  .product-top-bar .breadcrumb span {
    color: #999;
    margin: 0 3px;
  }


 
  .product-top-bar .product-price {
    font-weight: bold;
    font-size: 15px;
    color: #000;
    margin-right: 15px;
  }

  
  .product-top-bar .add-to-cart-btn {
    background-color: #ffb400; /* Yellow Button */
    color: #000;
    border: none;
    font-size: 13px;
    font-weight: bold;
    padding: 8px 14px;
    cursor: pointer;
    text-transform: uppercase;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .product-top-bar .add-to-cart-btn:hover {
    background-color: #e5a700;
    transform: scale(1.02);
  }

 
  @media (max-width: 768px) {
    .product-top-bar {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
      padding: 10px;
    }

    .product-top-bar .product-price,
    .product-top-bar .add-to-cart-btn {
      margin: 0;
    }

    .product-top-bar .add-to-cart-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
