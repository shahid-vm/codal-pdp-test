<div class="product-top-bar page-width">
  <!-- Breadcrumb -->
  <div class="breadcrumb">
    {% render 'breadcrumb' %}
  </div>

  <!-- Price and Add to Cart -->
  <div class="product-action">
    <div class="product-price">
         <div id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
            <span class="product-price_sticky_wrraper"></span>
                    {{ product.selected_or_first_available_variant.price |divided_by : 100}}
            </div>
    </div>
    <button class="add-to-cart-btn Sticky_add-to-cart-btn" id="Sticky_addToCartBtn">Add to Cart</button>
  </div>
</div>
<style>
     
  .product-top-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #EAEAEA; 
    
    border-bottom: 1px solid #EAEAEA;
    font-family: Arial, Helvetica, sans-serif;
    width: 100%;
    box-sizing: border-box;
        position: sticky;
    width: 100%;
    top: 0;
    z-index: 999;
  }

  
  .product-top-bar .breadcrumb {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 13px;
    color: #555;
    flex-wrap: wrap;
  }

  .product-top-bar .breadcrumb a {
    text-decoration: none;
    color: #555;
    transition: color 0.3s ease;
    font-size:14px;
  }

  .product-top-bar .breadcrumb a:hover {
    color: #000;
  }

  .product-top-bar .breadcrumb span {
    color: #999;
    margin: 0 3px;
  }


 
  .product-top-bar .product-price {
    font-weight: bold;
    font-size: 15px;
    color: #000;
    margin-right: 15px;
  }

  
  .product-top-bar .add-to-cart-btn {
    background-color: #ffb400; /* Yellow Button */
    color: #000;
    border: none;
    font-size: 13px;
    font-weight: bold;
    padding: 11px 14px;
    cursor: pointer;
    text-transform: uppercase;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .product-top-bar .add-to-cart-btn:hover {
    background-color: #e5a700;
    transform: scale(1.02);
  }

 .product-action {
    display: flex;
    align-items: center;
}
.product-action  .price__regular .price-item--regular
{
    color: #000;
    font-family: 'Eurostile';
    font-size:16px;
}
  @media (max-width: 768px) {
   .product-top-bar .breadcrumb {
    display:none;
    }
    .product-top-bar {
             justify-content: space-between;
        width: 100%;
                padding-right: 0;
                        position: fixed;
        top: unset;
        bottom: 0;
    }
    .product-action
    {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }
    .product-price {
    width: 35%;
}

    .product-top-bar .product-price,
    .product-top-bar .add-to-cart-btn {
      margin: 0;
    }

    .product-top-bar .add-to-cart-btn {
     
      text-align: center;
    }
  }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
  // Get the sticky button and the actual Add to Cart button
  const stickyBtn = document.getElementById("Sticky_addToCartBtn");
  const addToCartBtn = document.querySelector(".product-form__submit");

  if (stickyBtn && addToCartBtn) {
    stickyBtn.addEventListener("click", function (e) {
      e.preventDefault(); // Prevent any default behavior
      addToCartBtn.click(); // Trigger the original Add to Cart button click
    });
  }
});
    </script>