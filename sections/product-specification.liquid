<!-- sections/product-specification.liquid -->

<section id="product-specification-section" class="product-spec-section">
  <div class="accordion-container">

    <!-- Product Description Accordion -->
    {% if product.description != blank %}
      <div class="accordion-item">
        <button class="accordion-header">
          Product Description
          <span class="accordion-icon">+</span>
        </button>
        <div class="accordion-content">
          <div class="product-description">
            {{ product.description }}
          </div>
        </div>
      </div>
    {% endif %}

    <!-- Specification Accordion -->
    {% assign specs = product.metafields.specification %}
    {% if specs != blank %}
      <div class="accordion-item">
        <button class="accordion-header">
          Specification
          <span class="accordion-icon">+</span>
        </button>
        <div class="accordion-content">
          <table class="spec-table">
            <tbody>
              {% for spec in specs %}
                {% assign key = spec[0] | replace: '_', ' ' | capitalize %}
                {% assign value = spec[1] %}
                <tr>
                  <td class="spec-key">{{ key }}</td>
                  <td class="spec-value">{{ value }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    {% endif %}

    <!-- Product Data Sheets Accordion -->
    {% assign data_sheets = product.metafields.custom.data_sheet | default: "[]" | parse_json %}
    {% if data_sheets.size > 0 %}
      <div class="accordion-item">
        <button class="accordion-header">
          Product Data Sheets ({{ data_sheets.size }})
          <span class="accordion-icon">+</span>
        </button>
        <div class="accordion-content">
          <ul class="data-sheet-list">
            {% for sheet in data_sheets %}
              <li>
                <a href="{{ sheet.url }}" target="_blank" rel="noopener noreferrer">
                  {{ sheet.name }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
/* Container Styling */
.product-spec-section {
  max-width: 800px;
  margin: 30px auto;
  font-family: Arial, sans-serif;
}

.accordion-container {
  border: 1px solid #ddd;
  border-radius: 6px;
  overflow: hidden;
  background: #fff;
}

/* Accordion Header */
.accordion-header {
  width: 100%;
  text-align: left;
  background-color: #f9f9f9;
  padding: 15px;
  font-size: 16px;
  font-weight: bold;
  border-bottom: 1px solid #e5e5e5;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: background 0.3s;
}

.accordion-header:hover {
  background-color: #f1f1f1;
}

.accordion-icon {
  font-size: 18px;
  transition: transform 0.3s;
}

/* Accordion Content with Smooth Animation */
.accordion-content {
  max-height: 0;
  overflow: hidden;
  padding: 0 15px;
  background-color: #fff;
  transition: max-height 0.4s ease, padding 0.3s ease;
}

.accordion-item.active .accordion-content {
  padding: 15px;
  max-height: 800px;
}

.accordion-item.active .accordion-icon {
  transform: rotate(45deg);
}

/* Table Styling */
.spec-table {
  width: 100%;
  border-collapse: collapse;
}

.spec-table td {
  padding: 10px;
  border: 1px solid #ddd;
}

.spec-key {
  font-weight: bold;
  width: 40%;
  background-color: #f7f7f7;
}

.spec-value {
  color: #333;
}

/* Data Sheet Links */
.data-sheet-list {
  list-style: none;
  padding-left: 15px;
}

.data-sheet-list li {
  margin: 8px 0;
}

.data-sheet-list a {
  color: #0073e6;
  text-decoration: none;
  font-weight: 600;
}

.data-sheet-list a:hover {
  text-decoration: underline;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const accordionHeaders = document.querySelectorAll(".accordion-header");

  accordionHeaders.forEach(header => {
    header.addEventListener("click", function () {
      const parent = this.parentElement;
      parent.classList.toggle("active");
    });
  });
});
</script>
