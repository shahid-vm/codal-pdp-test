    @font-face {
        font-family: 'Eurostile';
        src: url('https://cdn.shopify.com/s/files/1/0744/6249/5005/files/Eurostile-Demi-Demi.woff2') format('woff2'),
        url('https://cdn.shopify.com/s/files/1/0744/6249/5005/files/Eurostile-Demi-Demi.woff2?v=1755980021') format('woff');
        font-weight: 600;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: 'MyriadPro';
        src: url('{{ ' MyriadPro-Regular.woff2' | asset_url }}') format('woff2'),
        url('{{ ' MyriadPro-Regular.woff' | asset_url }}') format('woff');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: 'MyriadPro';
        src: url('{{ ' MyriadPro-Semibold.woff2' | asset_url }}') format('woff2'),
        url('{{ ' MyriadPro-Semibold.woff' | asset_url }}') format('woff');
        font-weight: 600;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: 'MyriadPro';
        src: url('{{ ' MyriadPro-Bold.woff2' | asset_url }}') format('woff2'),
        url('{{ ' MyriadPro-Bold.woff' | asset_url }}') format('woff');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
    }


    :root {
        --pdp-font-heading: 'Eurostile', system-ui, sans-serif;
        --pdp-font-body: 'MyriadPro', system-ui, sans-serif;
    }


    body {
        font-family: var(--pdp-font-body);
    }

    .h1,
    .product__title,
    h1,
    h2,
    h3 {
        font-family: var(--pdp-font-heading);
    }

    .page-width {
        max-width: 1600px;
    }

    .product__text.caption-with-letter-spacing,.template-product .product__tax {
        display: none;
    }

    .slider.slider--mobile {
        position: relative;
        flex-wrap: inherit;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        scroll-behavior: smoothh; 
        scroll-padding-left: 1.5rem;
        -webkit-overflow-scrolling: touch;
        margin-bottom: 1rem;
    }

    @media screen and (min-width: 990px) {
        .template-product .product-left-custom-row .product-left-custom {
            max-width: 30%;
            width: calc(30% - var(--grid-desktop-horizontal-spacing) / 2);
        }

        .template-product .product__info-wrapper {
            max-width: 38% !important;
            width: calc(38% - var(--grid-desktop-horizontal-spacing) / 2) !important;
        }
    }

    .product__title h1 {
        font-size: 24px;
        font-weight: 500;
    }

    .product-form__input .form__label {
        display: none;
    }
    .global-media-settings
    {
        border:none;
    }
    .template-product .product-form__input--pill input[type=radio]+label
    {
        border-radius:0;
        color:#344054;
        border-radius:4px;
        background-color:#fff;
        border:1px solid #E4E7EC;
        width:100%;
        max-width:125px;
            padding: 12px 2px;
    }
     .template-product .custom_variant_option_title {
    font-size: 16px;
    line-height: 20px;
    margin-bottom: 5px;
    font-family: 'MyriadPro';
    font-weight:500;
}
   .template-product .product-form__input--pill input[type=radio]:checked+label
{
        background-color: #51f7ce4f;
        border-color:#51F7CE;
}
.template-product .product-form__input--pill input[type=radio]:checked+label .custom_variant_option_title
{
    color:#0A6557;
}
   .template-product .product-form__input--pill input[type=radio]:checked+label  .custom_variant_option_price
{
    color:#00AD8E;
}
.product-custom-variant-col
{
    font-size:14px;
       line-height: 24px;
       color:#3E4545;
}
.short_description_variant_row {
    margin-top: 25px;
}
.add_to_cart_container {
    width: 30%;
    border: 1px solid;
    padding:25px;
    margin-left:15px;
    border:1px solid #E4E7EC;
}
.price__regular .price-item--regular {
    margin-right: 0;
    font-size: 35px;
    color: #006747;
    font-family: 'Eurostile';
}